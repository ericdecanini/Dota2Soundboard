<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/bg_main</item>
        <item name="android:colorForeground">@android:color/darker_gray</item>
        <item name="android:colorBackground">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textColorPrimaryInverse">@color/colorPrimaryDark</item>
        <item name="android:fontFamily">@font/radiance</item>
        <item name="popupMenuStyle">@style/PopupMenu</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="PopupMenu" parent="Theme.AppCompat.Light">
        <item name="android:popupBackground">@color/colorPrimaryDark</item>
    </style>

    <style name="NavigationDrawerStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/radiance</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="DotaToast">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:fontFamily">@font/radiance</item>
        <!--<item name="android:colorBackground">@color/colorPrimary</item>-->
        <item name="android:background">@drawable/header_bg</item>
        <item name="android:strokeWidth">2.0</item>
        <item name="android:strokeColor">@color/colorPrimaryDark</item>
        <item name="android:radius">3dp</item>
        <item name="android:alpha">255</item>
    </style>

    <style name="HomeHeaderText">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/radiancesemibold</item>
    </style>

    <style name="HomeItemText">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/radiancesemibold</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="HeaderText">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:alpha">0.5</item>
    </style>

    <style name="HeroItemText">
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/radiancebold</item>
    </style>

    <style name="SoundboardTitle">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ContentText">
        <item name="android:textAllCaps">true</item>
        <item name="android:alpha">0.8</item>
    </style>

</resources>
